<%- include("partials/header") -%>

<% if( setName === 'ugl') { %>
  <%- include("heroes/unglued") -%>
<%} else if( setName === 'ust') { %>
  <%- include("heroes/unstable") -%>
<% } else if( setName === 'und') { %>
    <%- include("heroes/unsanctioned") -%>
<% } %>

<% for(let i=0; i<cardList.length; i+=4) {  %>
  <div class="row mb-3 text-center">
    <% for(let j=i; j<i+4; j++) { %>
    <div class="col-lg-3 col-sm-6 pb-2 themed-grid-col blur-load" style="background-image: url(../public/images/mtg-card.jpg);">
      <a href="/card/<%=cardList[j].name.toLowerCase().split(" ").join("-")%>"> <img src=<%= cardList[j].imageUrl %> /> </a>
    </div>
    <% } %>
  </div>
<% } %>
</div>

<%- include("partials/footer") -%>
